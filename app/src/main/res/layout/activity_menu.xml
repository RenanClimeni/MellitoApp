<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    android:orientation="vertical"
    tools:context=".Activitys.Menu">


    <Button
        android:id="@+id/btnProdutos"
        android:layout_width="355dp"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/menu1" />

    <Button
        android:id="@+id/btnCarrinho"
        android:layout_width="355dp"
        android:layout_height="165dp"
        android:layout_centerInParent="true"
        android:background="@drawable/menu2" />

    <Button
        android:id="@+id/btnConfig"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_alignStart="@+id/btnProdutos"
        android:layout_alignTop="@+id/btnHistoria"
        android:background="@drawable/menu3" />

    <Button
        android:id="@+id/btnHistoria"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_alignEnd="@+id/btnProdutos"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:background="@drawable/menu4" />

</RelativeLayout>